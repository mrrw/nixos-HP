#!/bin/bash
DIR=$HOME/lib/audio/
mnt=$DIR.mnt/

Welcome() { \clear && echo -e "\n  Welcome to audio. \n \n" && sleep .3
}
MainMenu() { pwd && ls -a && tree -L2 .exports
}

a() { cd $DIR
}
b() { cd $DIR.bin
}
e() { cd $DIR.exports
}
p() { PS3="..." && select s in $(ls $DIR.exports) ; do 
		play $DIR.exports/$s/*.mp3 ; done
}
r() { cd $DIR.archive
}
s() { cd $DIR.source
}
t() { cd $DIR.tracking
}
z() { cd $DIR.ZOOM
}
zoom() { sudo mount /dev/sdb1 $mnt && cd $mnt/STEREO/FOLDER01
		echo "Don't forget to umount!" && sleep 1
}

Tracking() {
cd .tracking
PS3="  What track would you like to work on?"
select f in $(ls) ; do
$EDITOR $f
done
}
