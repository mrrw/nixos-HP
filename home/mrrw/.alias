alias ..="cd .."
alias cmatrix="cmatrix -absu 8"
alias echo="echo -e"
alias info="info --init-file $HOME/.config/info/infokey"
alias less="less --use-color --wordwrap"
alias ls="ls --color=auto --group-directories-first"
alias neofetch="while echo -n ; do neofetch |lolcat -F 0.03 && sleep 300 ; done"
